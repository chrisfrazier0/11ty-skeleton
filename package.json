{
  "private": true,
  "name": "11ty-skeleton",
  "version": "1.0.0",
  "description": "bare bones template for 11ty projects",
  "author": "Chris Frazier",
  "license": "MIT-0",
  "repository": {
    "type": "git",
    "url": "https://github.com/chrisfrazier0/11ty-skeleton"
  },
  "engines": {
    "npm": "please-use-yarn",
    "node": "16"
  },
  "scripts": {
    "postinstall": "husky install",
    ":husky-uninstall": "husky uninstall",
    ":clean": "rimraf public",
    ":clean-all": "rimraf public .husky/_ node_modules",
    ":pristine": "npm-run-all :husky-uninstall :clean-all",
    ":lint": "eslint --no-error-on-unmatched-pattern src/**/*.js",
    ":build-11ty": "cross-env ELEVENTY_ENV=production node -r esm node_modules/.bin/eleventy",
    ":watch-11ty": "cross-env ELEVENTY_ENV=development node -r esm node_modules/.bin/eleventy --serve",
    ":debug-11ty": "cross-env ELEVENTY_ENV=development DEBUG=* node -r esm node_modules/.bin/eleventy",
    ":build": "npm-run-all :clean :lint -p :build-*",
    ":dev": "npm-run-all :clean -p :watch-*",
    ":debug": "npm-run-all :clean :debug-11ty"
  },
  "devDependencies": {
    "@11ty/eleventy": "^1.0.1",
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "clean-css": "^5.3.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.17.0",
    "eslint-config-google": "^0.14.0",
    "esm": "^3.2.25",
    "html-minifier": "^4.0.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2"
  }
}
